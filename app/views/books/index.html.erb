<main>
  <h2>Books</h2>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
       <% @books.each do |book| %>
         <tr>
           <td><%= book.title %></td>
           <td><%= book.body %></td>
         </tr>
       <% end %>
    </tbody>
  </table>
</main>